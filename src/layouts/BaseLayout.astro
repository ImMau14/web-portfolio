---
import "@styles/main.css"
import Logo from "@components/Logo.tsx"

interface LayoutProps {
  title?: string
  className?: string
}

const { pageTitle, className } = Astro.props as LayoutProps
---

<html lang="en" class="w-full">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle ? `${pageTitle} · ImMau14` : "ImMau14"}</title>
  </head>
  <body class="w-full min-h-screen flex flex-col bg-black">
    <header class="h-16 w-full flex items-center justify-between p-4 md:p-8 border-b-2 border-gray-900">
      <div class="flex items-center gap-6">
        <Logo className="w-6" />
        <h2 class="flex flex-col text-gray-100 text-xl font-heading">ImMau14</h2>
      </div>

      <nav class="text-white">...</nav>
    </header>

    <main class={className ? `flex-1 ${className}` : "flex-1"}>
      <slot />
    </main>

    <footer class="h-16 w-full flex gap-4 items-center p-4 md:p-8 border-t-2 border-gray-900 justify-center">
      <p class="text-gray-100">Mauricio "ImMau14" Rodríguez - 2025</p>
    </footer>
  </body>
</html>
