---
import "@styles/main.css"
import Logo from "@components/Logo.tsx"
import Links from "@components/NavBar/Links.tsx"
import type { Page } from "@components/NavBar/types.ts"
import { FaGithub, FaLinkedin } from "react-icons/fa6"

interface LayoutProps {
  title?: string
  className?: string
}

const { pageTitle, className } = Astro.props as LayoutProps

const pages: Page = [
  { name: "Home", href: "/" },
  { name: "Projects", href: "/projecs" },
  { name: "About", href: "/about" },
  { name: "Contact", href: "/contact" },
]
---

<html lang="en" class="w-full">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle ? `${pageTitle} · ImMau14` : "ImMau14"}</title>
  </head>
  <body class="w-full min-h-screen flex flex-col bg-black">
    <header class="h-20 w-full flex items-center justify-between p-8 border-b-2 border-gray-900" client:load>
      <div class="flex items-center gap-4">
        <a href="/"><Logo className="w-6 md:w-8" /></a>
        <a href="/"
          ><h2
            class="flex flex-col text-xl md:text-xl font-logo bg-gradient-to-b from-gray-100 via-gray-100 to-gray-200 bg-clip-text font-bold text-transparent"
          >
            ImMau14
          </h2></a
        >
      </div>

      <nav class="text-gray-100 flex">
        <Links {pages} client:load />
      </nav>
    </header>

    <main class={className ? `flex-1 ${className}` : "flex-1"}>
      <slot />
    </main>

    <footer
      class="w-full h-24 md:h-20 flex flex-col md:flex-row gap-2 md:gap-4 items-center p-4 md:p-8 border-t-2 border-gray-900 justify-center md:justify-between"
    >
      <p class="text-gray-400 text-sm text-center md:text-left">
        © 2025 <b>·</b> Mauricio "ImMau14" Rodríguez <b>·</b> All rights reserved
      </p>
      <div class="flex gap-4 md:gap-6 items-center">
        <a
          href="https://linkedin.com/in/ImMau14"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-400 hover:text-white text-2xl duration-100"
          aria-label="Perfil de LinkedIn"><FaLinkedin client:visible /></a
        >
        <a
          href="https://github.com/ImMau14"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-400 hover:text-white text-2xl duration-100"
          aria-label="Perfil de GitHub"><FaGithub client:visible /></a
        >
      </div>
    </footer>
  </body>
</html>
