---
import BaseLayout from "@layouts/BaseLayout.astro"
import AnimatedBackground from "@components/AnimatedBackground.tsx"
import AvatarPhoto from "@components/AvatarPhoto.tsx"
import { FaGithub, FaLinkedin } from "react-icons/fa6"
import { FaTelegramPlane, FaCode } from "react-icons/fa"
import ProjectCard from "@components/ProjectCard/ProjectCard.tsx"

import { getCollection, getEntry } from "astro:content"
import type { CollectionEntry, DataEntryMap } from "astro:content"

import { locales, defaultLocale } from "@content/utils"

export async function getStaticPaths() {
  return locales.map((lang) => ({ params: { lang } }))
}

const { lang } = Astro.params as { lang: string }

async function getEntryOrFallback<C extends keyof DataEntryMap>(
  collection: C,
  id: string,
  fallbackLang = defaultLocale,
): Promise<CollectionEntry<C> | undefined> {
  const entry = (await getEntry(collection, id)) as CollectionEntry<C> | undefined
  if (entry) return entry

  const parts = id.split("/")
  if (parts.length === 0) return undefined
  parts[0] = fallbackLang
  const fallbackId = parts.join("/")

  const fallbackEntry = (await getEntry(collection, fallbackId)) as CollectionEntry<C> | undefined
  return fallbackEntry ?? undefined
}

const entryId = `${lang}/index`
const pageEntry = await getEntryOrFallback("pages", entryId)

const pageData = (pageEntry as any)?.data ?? {
  title: "",
  heroTitle: "Mauricio Rodríguez",
  heroSubtitle: "Fullstack Developer",
  intro: [],
  featuredHeading: "Featured Projects",
  featuredLimit: 3,
  social: {},
  lang,
}

const layoutEntryId = `${lang}/BaseLayout`
const layoutEntryData = await getEntryOrFallback("pages", layoutEntryId)

const intro: string[] = pageData.intro ?? pageData.introParagraphs ?? []
const featuredHeading: string = pageData.featuredHeading ?? pageData.featuredTitle ?? "Featured Projects"
const featuredLimit: number = Number(pageData.featuredLimit ?? 3)
const social: Record<string, string> = pageData.social ?? {}
const heroTitle: string = pageData.heroTitle ?? pageData.title ?? "Mauricio Rodríguez"
const heroSubtitle: string = pageData.heroSubtitle ?? ""
const noProjects: string = pageData.noProjects ?? ""
const featuredDescription: string = pageData.featuredDescription ?? ""

const allProjects = await getCollection("projects")
let projectsByLang = allProjects.filter((p) => p.id.startsWith(`${lang}/`))

if (projectsByLang.length === 0 && lang !== defaultLocale) {
  projectsByLang = allProjects.filter((p) => p.id.startsWith(`${defaultLocale}/`))
}

const featuredProjects = projectsByLang
  .filter((p) => (p as any).data.isFeatured === true)
  .slice(0, featuredLimit) as CollectionEntry<"projects">[]

function slugFromEntryId(eid: string) {
  const parts = eid.split("/")
  parts.shift()
  if (parts[0] === "project") parts.shift()
  return parts.join("/")
}
---

<BaseLayout className="flex flex-col items-center" baseLang={layoutEntryData!.data}>
  <AnimatedBackground className="w-full" client:idle>
    <div
      class="flex flex-col-reverse items-center justify-center gap-8 px-4 py-4 md:flex-row md:px-24 md:py-8 xl:gap-16 xl:px-40 xl:py-0"
    >
      <div class="flex flex-1 flex-col gap-6">
        <div class="flex flex-col items-center md:items-start">
          <h1
            class="bg-gradient-to-b from-gray-950 via-gray-950 to-gray-800 bg-clip-text pb-1 text-center font-heading text-4xl font-bold leading-tight text-transparent md:text-start md:text-6xl dark:from-gray-100 dark:via-gray-100 dark:to-gray-200"
          >
            {heroTitle}
          </h1>
          <p
            class="bg-gradient-to-r from-green-800 via-green-700 to-lime-700 bg-clip-text pb-1 font-heading text-2xl font-bold text-transparent dark:from-green-300 dark:via-green-300 dark:to-lime-200"
          >
            {heroSubtitle}
          </p>
        </div>

        <section
          class="flex flex-col gap-4 text-center font-body leading-relaxed text-gray-900 md:text-start dark:text-gray-400"
        >
          {intro.length > 0 ? intro.map((p) => <p>{p}</p>) : <p class="text-gray-400">No intro content for {lang}.</p>}
        </section>

        <div class="flex items-center justify-center gap-6 md:justify-start">
          {
            social?.linkedin && (
              <a
                href={social.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="transform text-3xl text-gray-950 transition-all duration-200 ease-in-out hover:scale-[125%] dark:text-gray-200 dark:hover:text-white"
                aria-label="LinkedIn profile"
              >
                <FaLinkedin client:visible />
              </a>
            )
          }
          {
            social?.github && (
              <a
                href={social.github}
                target="_blank"
                rel="noopener noreferrer"
                class="transform text-3xl text-gray-950 transition-all duration-200 ease-in-out hover:scale-[125%] dark:text-gray-200 dark:hover:text-white"
                aria-label="GitHub profile"
              >
                <FaGithub client:visible />
              </a>
            )
          }
          {
            social?.telegram && (
              <a
                href={social.telegram}
                target="_blank"
                rel="noopener noreferrer"
                class="transform text-3xl text-gray-950 transition-all duration-200 ease-in-out hover:scale-[125%] dark:text-gray-200 dark:hover:text-white"
                aria-label="Telegram contact"
              >
                <FaTelegramPlane client:visible />
              </a>
            )
          }
        </div>
      </div>

      <AvatarPhoto
        className="h-[160px] w-[160px] rounded-full border-2 bg-gray-700 shadow-xl md:min-h-[220px] md:min-w-[220px] xl:h-[290px] xl:w-[290px] dark:border-gray-100/50"
      />
    </div>
  </AnimatedBackground>

  <div
    class="relative flex w-full flex-col items-center bg-gray-200 pt-4 before:absolute before:top-[-4rem] before:h-16 before:w-full before:bg-gradient-to-t before:from-gray-200 before:via-transparent before:to-transparent before:content-[''] dark:bg-silver-950 before:dark:from-silver-950"
  >
    <article class="flex w-full flex-col gap-8 px-4 py-4 md:px-24 md:py-8 xl:px-40 xl:py-10">
      <header class="flex items-center gap-4">
        <FaCode className="text-4xl text-green-600 dark:text-green-300/80" />
        <h2
          class="bg-gradient-to-b from-gray-950 via-gray-950 to-gray-800 bg-clip-text font-heading text-4xl font-bold text-transparent dark:from-gray-100 dark:via-gray-100 dark:to-gray-200"
        >
          {featuredHeading}
        </h2>
      </header>

      <p class="font-body leading-relaxed text-gray-800 dark:text-gray-300">{featuredDescription}</p>

      {
        featuredProjects.length === 0 ? (
          <p class="font-body text-gray-400">{noProjects}</p>
        ) : (
          <div class="w-full">
            <div
              class="scrollbar scrollbar-rounded flex touch-pan-x snap-x snap-mandatory gap-4 overflow-x-auto pb-4 md:hidden"
              role="region"
            >
              {featuredProjects.map((p) => {
                const slug = slugFromEntryId(p.id)
                const href = `/${lang}/project/${slug.split(".")[0]}`
                return (
                  <div class="min-w-[260px] max-w-full flex-shrink-0 snap-center">
                    <ProjectCard
                      title={p.data.title}
                      image={p.data.image}
                      alt={p.data.alt}
                      description={p.data.description}
                      techs={p.data.tech}
                      githubUrl={p.data.githubUrl}
                      isPublic={p.data.isPublic}
                      articleUrl={href}
                    />
                  </div>
                )
              })}
            </div>

            <div class="hidden w-full grid-cols-2 gap-4 md:grid lg:grid-cols-3">
              {featuredProjects.map((p) => {
                const slug = slugFromEntryId(p.id)
                const href = `/${lang}/project/${slug.split(".")[0]}`
                return (
                  <ProjectCard
                    title={p.data.title}
                    image={p.data.image}
                    alt={p.data.alt}
                    description={p.data.description}
                    techs={p.data.tech}
                    githubUrl={p.data.githubUrl}
                    isPublic={p.data.isPublic}
                    articleUrl={href}
                  />
                )
              })}
            </div>
          </div>
        )
      }
    </article>
  </div>
</BaseLayout>
